{
  "name": "lifeos",
  "version": "0.1.0",
  "description": "LifeOS Electron application",
  "main": "dist/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "echo \"TODO: add lint\"",
    "dev:vite": "vite --config configs/vite.config.ts",
    "dev:main": "cross-env NODE_ENV=development ts-node --project tsconfig.main.json src/main/devRunner.ts",
    "dev": "concurrently -k \"npm:dev:vite\" \"npm:dev:main\"",
    "build:renderer": "vite build --config configs/vite.config.ts",
    "build:main": "tsup src/main/index.ts --config configs/tsup.config.ts",
    "build:preload": "tsup src/preload/index.ts --config configs/tsup.config.ts",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "start": "cross-env NODE_ENV=production electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^7.0.0",
    "@dnd-kit/utilities": "^3.2.1",
    "better-sqlite3": "^9.4.3",
    "electron": "^28.2.0",
    "framer-motion": "^11.1.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "tsup": "^7.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.1.6",
    "wait-on": "^7.0.1"
  }
}

