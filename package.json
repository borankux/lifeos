{
  "name": "lifeos",
  "version": "0.1.11",
  "description": "LifeOS Electron application",
  "main": "dist/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "echo \"TODO: add lint\"",
    "dev:vite": "vite --config configs/vite.config.ts",
    "dev:main": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev": "concurrently -k \"npm:dev:vite\" \"npm:dev:main\" \"wait-on tcp:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:renderer": "vite build --config configs/vite.config.ts",
    "build:main": "tsup src/main/index.ts --config configs/tsup.config.ts --out-dir dist/main",
    "build:preload": "tsup src/preload/index.ts --config configs/tsup.config.ts --out-dir dist/preload",
    "build:icons": "powershell -ExecutionPolicy Bypass -File scripts/convert-svg-to-png.ps1 && node scripts/build-icons.js",
    "build": "npm run build:icons && npm run build:renderer && npm run build:main && npm run build:preload",
    "start": "cross-env NODE_ENV=production electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.lifeos.app",
    "productName": "LifeOS",
    "files": [
      "dist/**/*",
      "build/**/*",
      "notification.html",
      "LOGO.svg",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "icon": "build/icon.png",
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Office",
      "target": ["AppImage", "deb"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^7.0.0",
    "@dnd-kit/utilities": "^3.2.1",
    "better-sqlite3": "^9.4.3",
    "framer-motion": "^11.1.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.14.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/wait-on": "^5.3.4",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "tsup": "^7.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.1.6",
    "wait-on": "^7.0.1"
  }
}
